{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Braid",
  "scopeName": "source.braid",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#effects" },
    { "include": "#functions" },
    { "include": "#operators" },
    { "include": "#result-constructors" },
    { "include": "#annotations" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.braid",
          "match": "///.*$"
        },
        {
          "name": "comment.line.double-slash.braid",
          "match": "//.*$"
        },
        {
          "name": "comment.block.braid",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            { "name": "comment.block.braid", "match": "." }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.braid",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.braid",
              "match": "\\\\[\"\\\\nrt0]"
            },
            {
              "name": "variable.interpolation.braid",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [
                { "include": "#keywords" },
                { "include": "#numbers" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.braid",
          "match": "\\b0x[0-9a-fA-F]+(_[0-9a-fA-F]+)*\\b"
        },
        {
          "name": "constant.numeric.float.braid",
          "match": "\\b\\d+\\.\\d+([eE][+-]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.braid",
          "match": "\\b\\d+(_\\d+)*\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.braid",
          "match": "\\b(fn|type|enum|trait|impl|for|match|if|else|return|let|mut|import|from|as|in|const)\\b"
        },
        {
          "name": "keyword.other.braid",
          "match": "\\b(actor|async|await|spawn|requires|ensures|policy|self)\\b"
        },
        {
          "name": "constant.language.boolean.braid",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.braid",
          "match": "\\b(null|None)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.braid",
          "match": "\\b(String|Number|Boolean|Bool|JSONB|Array|Object|Void|Int|i32|i64|u32|u64|f32|f64)\\b"
        },
        {
          "name": "support.type.result.braid",
          "match": "\\b(Result|Option|Some)\\b"
        },
        {
          "name": "entity.name.type.crm.braid",
          "match": "\\b(Account|Lead|Contact|Opportunity|Activity|Note|User|Tenant|Snapshot|Policy|Employee|BizDevSource|ConversionResult|Summary|Assignment|Document|Workflow|WorkflowStep)\\b"
        },
        {
          "name": "entity.name.type.error.braid",
          "match": "\\b(CRMError|NotFound|ValidationError|PermissionDenied|NetworkError|DatabaseError|PolicyViolation|APIError)\\b"
        },
        {
          "name": "entity.name.type.capability.braid",
          "match": "\\b(Http|Clock|Fs|Db|Email|Notify|Auth|Response|HttpError|IoError|Path|ReadOnly|File|Addr)\\b"
        },
        {
          "comment": "User-defined type names starting with uppercase",
          "name": "entity.name.type.user.braid",
          "match": "(?<=:\\s*)[A-Z][a-zA-Z0-9_]*(?=\\s*[,)}>|=])"
        }
      ]
    },
    "effects": {
      "patterns": [
        {
          "name": "keyword.other.effect.braid",
          "match": "!(net|clock|fs|db|email|io|notify|db\\.write|db\\.drop|db\\.truncate|fs\\.delete_system|auth\\.bypass|billing\\.refund|user\\.delete)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.http.braid",
          "match": "\\bhttp\\.(get|post|put|patch|delete|app|serve)\\b"
        },
        {
          "name": "entity.name.function.clock.braid",
          "match": "\\bclock\\.(now|today)\\b"
        },
        {
          "name": "entity.name.function.fs.braid",
          "match": "\\bfs\\.(open|read|write)\\b"
        },
        {
          "name": "entity.name.function.notify.braid",
          "match": "\\bnotify\\.send\\b"
        },
        {
          "name": "entity.name.function.builtin.braid",
          "match": "\\b(len|includes|toString|parseInt|parseFloat|encodeURIComponent|reduce|map|filter)\\b"
        },
        {
          "name": "entity.name.function.method.braid",
          "match": "\\.(join|push|pop|length|trim|toLowerCase|toUpperCase|split|slice|concat|find|forEach|some|every|keys|values|entries)\\b"
        },
        {
          "name": "entity.name.function.definition.braid",
          "match": "(?<=fn\\s+)[a-zA-Z_][a-zA-Z0-9_]*"
        },
        {
          "comment": "Function/method call â€” identifier followed by (",
          "name": "entity.name.function.call.braid",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)(?=\\s*\\()"
        }
      ]
    },
    "result-constructors": {
      "patterns": [
        {
          "name": "keyword.other.result.ok.braid",
          "match": "\\bOk\\b"
        },
        {
          "name": "keyword.other.result.err.braid",
          "match": "\\bErr\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.fat-arrow.braid",
          "match": "=>"
        },
        {
          "name": "keyword.operator.arrow.braid",
          "match": "->"
        },
        {
          "name": "keyword.operator.comparison.braid",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.logical.braid",
          "match": "&&|\\|\\|"
        },
        {
          "name": "keyword.operator.null-coalescing.braid",
          "match": "\\?\\?"
        },
        {
          "name": "keyword.operator.propagation.braid",
          "match": "\\?"
        },
        {
          "name": "keyword.operator.pipe.braid",
          "match": "\\|>"
        },
        {
          "name": "keyword.operator.assignment.compound.braid",
          "match": "\\+=|-=|\\*=|/="
        },
        {
          "name": "keyword.operator.assignment.braid",
          "match": "="
        },
        {
          "name": "keyword.operator.arithmetic.braid",
          "match": "\\+|-|\\*|/|%"
        },
        {
          "name": "keyword.operator.spread.braid",
          "match": "\\.\\.\\."
        },
        {
          "name": "keyword.operator.scope.braid",
          "match": "::"
        }
      ]
    },
    "annotations": {
      "patterns": [
        {
          "name": "entity.name.tag.annotation.braid",
          "match": "@[a-zA-Z_][a-zA-Z0-9_]*"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.comma.braid",
          "match": ","
        },
        {
          "name": "punctuation.terminator.semicolon.braid",
          "match": ";"
        },
        {
          "name": "punctuation.separator.colon.braid",
          "match": ":"
        }
      ]
    }
  }
}
