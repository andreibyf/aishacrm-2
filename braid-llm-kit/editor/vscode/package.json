{
  "name": "braid-language",
  "displayName": "Braid - AI-Native DSL",
  "description": "Syntax highlighting, formatting, snippets, and language support for Braid - the type-safe, capability-controlled language for AI tool definitions",
  "version": "0.7.0",
  "publisher": "aisha-crm",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/braid-llm-kit"
  },
  "engines": {
    "vscode": "^1.86.0"
  },
  "main": "./extension-client.js",
  "activationEvents": [
    "onLanguage:braid"
  ],
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Snippets"
  ],
  "keywords": [
    "braid",
    "ai",
    "llm",
    "dsl",
    "tool-calling",
    "type-safe",
    "formatter"
  ],
  "contributes": {
    "languages": [
      {
        "id": "braid",
        "extensions": [
          ".braid"
        ],
        "aliases": [
          "Braid",
          "braid"
        ],
        "icon": {
          "light": "./icons/braid-light.png",
          "dark": "./icons/braid-dark.png"
        },
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "braid",
        "scopeName": "source.braid",
        "path": "./syntaxes/braid.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "braid",
        "path": "./snippets/core.json"
      }
    ],
    "configuration": {
      "title": "Braid",
      "properties": {
        "braid.format.indentSize": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces per indentation level"
        },
        "braid.format.insertFinalNewline": {
          "type": "boolean",
          "default": true,
          "description": "Insert a final newline at end of file"
        },
        "braid.format.maxLineLength": {
          "type": "number",
          "default": 120,
          "description": "Preferred maximum line length (soft limit for formatting hints)"
        }
      }
    }
  }
}
