// Executive Assistant Tools - Activity & Calendar Management
// Schedule meetings, track tasks, manage calendar

import { Result, Activity, CRMError } from "../../spec/types.braid"

fn createActivity(
  tenant: String,
  subject: String,
  activity_type: String,
  due_date: String,
  assigned_to: String,
  related_to_type: String,
  related_to_id: String,
  body: String
) -> Result<Activity, CRMError> !net {
  let url = "/api/activities";
  let payload = {
    tenant_id: tenant,
    subject: subject,
    due_date: due_date,
    assigned_to: assigned_to,
    related_to_type: related_to_type,
    related_to_id: related_to_id,
    body: body,
    status: "planned",
    metadata: {}
  };
  
  let response = http.post(url, { body: payload });
  
  return match response {
    Ok{value} => Ok(value.data),
    Err{error} => Err({ tag: "NetworkError", url: url, code: error.status }),
    _ => Err({ tag: "NetworkError", url: url, code: 500 })
  };
}

fn updateActivity(
  tenant: String,
  activity_id: String,
  updates: Object
) -> Result<Activity, CRMError> !net {
  let url = "/api/activities/" + activity_id;
  
  let response = http.put(url, { body: updates });
  
  return match response {
    Ok{value} => Ok(value.data),
    Err{error} => Err({ tag: "NetworkError", url: url, code: error.status }),
    _ => Err({ tag: "NetworkError", url: url, code: 500 })
  };
}

fn markActivityComplete(
  tenant: String,
  activity_id: String
) -> Result<Activity, CRMError> !net {
  let url = "/api/activities/" + activity_id;
  let updates = { status: "completed" };
  
  let response = http.put(url, { body: updates });
  
  return match response {
    Ok{value} => Ok(value.data),
    Err{error} => Err({ tag: "NetworkError", url: url, code: error.status }),
    _ => Err({ tag: "NetworkError", url: url, code: 500 })
