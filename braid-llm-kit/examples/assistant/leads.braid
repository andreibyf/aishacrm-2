@policy(WRITE_OPERATIONS)
fn convertLeadToAccount(
  tenant: String,
  lead_id: String,
  options: Object
) -> Result<Object, CRMError> !net {
  let url = "/api/v2/leads/" + lead_id + "/convert";
  let body = options;
  
  let response = http.post(url, { body: body });
  
  return match response {
    Ok{value} => Ok(value.data),
    Err{error} => CRMError.fromHTTP(url, error.status, "convert_lead"),
    _ => CRMError.network(url, 500, "unknown")
  };
}

@policy(READ_ONLY)
fn listLeads(
  tenant: String,
  status: String,
  account_id: String,
  limit: Number
) -> Result<Array, CRMError> !net {
  let url = "/api/v2/leads";
  
  // Build params with optional status and account_id filters
  let params = {
    tenant_id: tenant,
    status: status,
    account_id: account_id,
    limit: limit
  };
  
  let response = http.get(url, { params: params });
  
  // Note: Empty array is a VALID result (no matches), not an error
  return match response {
    Ok{value} => Ok(value.data),
    Err{error} => CRMError.fromHTTP(url, error.status, "list_leads"),
    _ => CRMError.network(url, 500, "unknown")
  };
}

