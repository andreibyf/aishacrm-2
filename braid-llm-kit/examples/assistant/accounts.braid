// Executive Assistant Tools - Account Management
// Create, read, update accounts with full CRM data

import { Result, Account, CRMError } from "../../spec/types.braid"

// Error handling: HTTP errors return CRMError with APIError tag and status code.
// The backend interprets status codes to determine error type:
// - 400 = ValidationError, 401/403 = PermissionDenied, 404 = NotFound, 5xx = NetworkError

@policy(WRITE_OPERATIONS)
fn createAccount(
  tenant_id: String,
  name: String,
  annual_revenue: Number,
  industry: String,
  website: String,
  email: String,
  phone: String
) -> Result<Account, CRMError> !net {
  let url = "/api/v2/accounts";
  let body = {
    tenant_id: tenant_id,
    name: name,
    annual_revenue: annual_revenue,
    industry: industry,
    website: website,
    email: email,
    phone: phone,
    metadata: {}
  };
  
  let response = http.post(url, { body: body });
  
  return match response {
    Ok{value} => Ok(value.data),
    Err{error} => CRMError.fromHTTP(url, error.status, "create_account"),
    _ => CRMError.network(url, 500, "unknown")
  };
}

@policy(WRITE_OPERATIONS)
fn updateAccount(
  tenant_id: String,
  account_id: String,
  updates: Object
) -> Result<Account, CRMError> !net {
  let url = "/api/v2/accounts/" + account_id;
  
  let response = http.put(url, { body: updates });
  
  return match response {
    Ok{value} => Ok(value.data),
    Err{error} => CRMError.fromHTTP(url, error.status, "update_account"),
    _ => CRMError.network(url, 500, "unknown")
  };
}

@policy(READ_ONLY)
fn getAccountDetails(
  tenant_id: String,
  account_id: String
) -> Result<Account, CRMError> !net {
  let url = "/api/v2/accounts/" + account_id;
  let params = { tenant_id: tenant_id };
  
  let response = http.get(url, { params: params });
  
  return match response {
    Ok{value} => Ok(value.data),
    Err{error} => CRMError.fromHTTP(url, error.status, "get_account"),
    _ => CRMError.network(url, 500, "unknown")
  };
}

@policy(READ_ONLY)
fn listAccounts(
  tenant_id: String,
  limit: Number,
  offset: Number
) -> Result<Array, CRMError> !net {
  let url = "/api/v2/accounts";
  let params = {
    tenant_id: tenant_id,
    limit: limit,
    offset: offset
  };
  
  let response = http.get(url, { params: params });
  
  // Note: Empty array is a VALID result (no accounts), not an error
  return match response {
    Ok{value} => Ok(value.data),
    Err{error} => CRMError.fromHTTP(url, error.status, "list_accounts"),
    _ => CRMError.network(url, 500, "unknown")
  };
}

@policy(READ_ONLY)
fn searchAccounts(
  tenant_id: String,
  query: String,
  limit: Number
) -> Result<Array, CRMError> !net {
  // Use the list endpoint with search parameter instead of a separate search endpoint
  let url = "/api/v2/accounts";
  let params = {
    tenant_id: tenant_id,
    search: query,
    limit: limit
  };
  
  let response = http.get(url, { params: params });
  
  // Note: Empty array is a VALID result (no matches found), not an error
  return match response {
    Ok{value} => Ok(value.data.accounts),
    Err{error} => CRMError.fromHTTP(url, error.status, "search_accounts"),
    _ => CRMError.network(url, 500, "unknown")
  };
}

// Search accounts by status - returns full account details for accounts matching a specific status
// Use this when user asks about accounts with a specific status (e.g. "active accounts", "inactive accounts")
// Status values: active, inactive, prospect, churned
@policy(READ_ONLY)
fn searchAccountsByStatus(
  tenant_id: String,
  status: String,
  limit: Number
) -> Result<Array, CRMError> !net {
  let url = "/api/v2/accounts";
  let params = {
    tenant_id: tenant_id,
    status: status,
    limit: limit
  };
  
  let response = http.get(url, { params: params });
  
  // Returns full account details including name, industry, revenue, etc.
  return match response {
    Ok{value} => Ok(value.data),
    Err{error} => CRMError.fromHTTP(url, error.status, "search_accounts_by_status"),
    _ => CRMError.network(url, 500, "unknown")
  };
}

@policy(WRITE_OPERATIONS)
fn deleteAccount(
  tenant_id: String,
  account_id: String
) -> Result<Boolean, CRMError> !net {
  let url = "/api/v2/accounts/" + account_id;
  
  let response = http.delete(url, {});
  
  return match response {
    Ok{value} => Ok(true),
    Err{error} => CRMError.fromHTTP(url, error.status, "delete_account"),
    _ => CRMError.network(url, 500, "unknown")
  };
}
