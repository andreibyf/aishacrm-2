{
  "name": "aishacrm-backend",
  "version": "1.0.50",
  "description": "Independent backend server for ai-sha crm - your own backend infrastructure",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node dev-server.js",
    "dev:unlimited": "node --watch server.js",
    "test": "node --test --test-reporter tap __tests__/**/*.test.js",
    "test:routes": "node --test --test-reporter tap __tests__/routes/*.test.js",
    "test:auth": "node --test --test-reporter tap __tests__/auth/*.test.js",
    "test:system": "node --test --test-reporter tap __tests__/system/*.test.js",
    "test:integration": "node --test --test-reporter tap __tests__/integration/*.test.js",
    "test:validation": "node --test --test-reporter tap __tests__/validation/*.test.js",
    "test:coverage": "c8 --reporter=text-summary --reporter=lcov node --test --test-reporter tap __tests__/**/*.test.js",
    "verify:phase3": "node scripts/run_phase3_verification.js",
    "seed": "node scripts/run_seed.js",
    "worker:email": "node workers/emailWorker.js",
    "verify:rls": "node verify-rls.js",
    "ci:check-rls": "node scripts/check-rls-ci.js"
  },
  "keywords": [
    "crm",
    "backend",
    "ai-sha-crm",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.76.1",
    "bull": "^4.16.5",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.7",
    "openai": "^4.0.0",
    "pg": "^8.11.3",
    "postgres": "^3.4.7",
    "puppeteer": "^24.30.0",
    "redis": "^4.6.13",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "c8": "^9.0.0"
  }
}
