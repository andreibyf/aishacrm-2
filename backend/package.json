{
  "name": "aishacrm-backend",
  "version": "4.5.24",
  "description": "Independent backend server for ai-sha crm - your own backend infrastructure",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "node dev-server.js",
    "dev:unlimited": "node --watch server.js",
    "test": "node --test --test-force-exit --test-timeout=120000 --test-reporter tap __tests__/**/*.test.js lib/care/*.test.js lib/care/__tests__/*.test.js",
    "test:safe": "bash scripts/run-tests-safe.sh",
    "test:care": "node --test --test-force-exit --test-timeout=30000 --test-reporter tap lib/care/*.test.js lib/care/__tests__/*.test.js",
    "test:routes": "node --test --test-force-exit --test-timeout=60000 --test-reporter tap __tests__/routes/*.test.js",
    "test:auth": "node --test --test-force-exit --test-timeout=30000 --test-reporter tap __tests__/auth/*.test.js",
    "test:bundles": "node --test --test-force-exit --test-timeout=45000 --test-reporter tap __tests__/bundles.test.js",
    "test:system": "node --test --test-force-exit --test-timeout=30000 --test-reporter tap __tests__/system/*.test.js",
    "test:integration": "node --test --test-force-exit --test-timeout=60000 --test-reporter tap __tests__/integration/*.test.js",
    "test:validation": "node --test --test-force-exit --test-timeout=30000 --test-reporter tap __tests__/validation/*.test.js",
    "test:coverage": "c8 --reporter=text-summary --reporter=lcov node --test --test-force-exit --test-timeout=120000 --test-reporter tap __tests__/**/*.test.js lib/care/*.test.js lib/care/__tests__/*.test.js",
    "verify:phase3": "node scripts/run_phase3_verification.js",
    "seed": "node scripts/run_seed.js",
    "worker:email": "node workers/emailWorker.js",
    "verify:rls": "node verify-rls.js",
    "ci:check-rls": "node scripts/check-rls-ci.js"
  },
  "keywords": [
    "crm",
    "backend",
    "ai-sha-crm",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@aws-sdk/client-s3": "^3.995.0",
    "@aws-sdk/s3-request-presigner": "^3.962.0",
    "@supabase/supabase-js": "^2.97.0",
    "bull": "^4.16.5",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^17.3.1",
    "express": "^4.22.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^7.1.0",
    "jose": "^6.1.3",
    "jsonwebtoken": "^9.0.2",
    "minimatch": "^10.2.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "nodemailer": "^8.0.1",
    "openai": "^6.22.0",
    "pg": "^8.11.3",
    "pino": "^10.3.1",
    "pino-pretty": "^13.1.3",
    "puppeteer": "^24.30.0",
    "qs": "^6.15.0",
    "redis": "^5.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "c8": "^10.1.3",
    "supertest": "^7.2.2",
    "vitest": "^4.0.18",
    "yaml": "^2.8.2"
  }
}
