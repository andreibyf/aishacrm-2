# Aisha CRM Backend Server Configuration
PORT=3001
NODE_ENV=development

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/aishacrm
# or use individual params:
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aishacrm
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password

# Supabase Configuration (for authentication)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_supabase_publishable_key  # Publishable key (safe for browser with RLS)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key  # Secret key (backend only!)
# Supabase Storage (for file uploads)
# Bucket should be created and set to public for public assets like logos, or use signed URLs
SUPABASE_STORAGE_BUCKET=tenant-assets
# Default password for new users (must be changed within 24 hours)
DEFAULT_USER_PASSWORD=Welcome2024!

# Base44 API Configuration (for data migration/sync only)
BASE44_APP_ID=68f83fa997417472c872be53
BASE44_API_KEY=your_base44_api_key

# Integration API Keys
N8N_API_KEY=your_n8n_api_key_here
OPENAI_API_KEY=your_openai_api_key

# Stripe Configuration (for billing functions)
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Telephony (Twilio/SignalWire)
TWILIO_ACCOUNT_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_token
SIGNALWIRE_PROJECT_ID=your_signalwire_project
SIGNALWIRE_API_TOKEN=your_signalwire_token

# Storage (MinIO/R2) - optional if you use Cloudflare R2 or MinIO instead of Supabase Storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_USE_SSL=false

R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key
R2_SECRET_ACCESS_KEY=your_r2_secret_key

# Microsoft Graph (Outlook integration)
MICROSOFT_CLIENT_ID=your_client_id
MICROSOFT_CLIENT_SECRET=your_client_secret
MICROSOFT_TENANT_ID=your_tenant_id

# Google APIs
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Security
JWT_SECRET=your_super_secret_jwt_key_change_this
API_RATE_LIMIT_WINDOW_MS=60000
API_RATE_LIMIT_MAX_REQUESTS=100

# CORS - Add your frontend URL
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# GitHub MCP Server (optional)
# If set, backend will expose a discovered 'GitHub MCP' server and health at /api/mcp/servers
# Never commit real tokens; use a .env file locally or deployment secrets.
GITHUB_TOKEN=ghp_your_token_here
