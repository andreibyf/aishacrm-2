// String operations module
@route(method: "POST", path: "/api/braid/greet")
fn greet_user(name: String) -> String {
  "Hello, " + name + "!"
}

@route(method: "POST", path: "/api/braid/concat")
fn concat_strings(first: String, second: String) -> String {
  first + " " + second
}

@route(method: "GET", path: "/api/braid/welcome")
fn welcome_message() -> String {
  let greeting: String = "Welcome";
  let target: String = "to Braid";
  greeting + " " + target
}
