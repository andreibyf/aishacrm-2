# Braid MCP Server - Production Environment Configuration
# Location: /opt/aishacrm/braid-mcp-node-server/.env

# Node Environment
NODE_ENV=production
PORT=8000

# Supabase Cloud Database (REQUIRED)
USE_SUPABASE_PROD=true
SUPABASE_URL=https://efzqxjpfewkrgpdootte.supabase.co
SUPABASE_SERVICE_ROLE_KEY=CHANGE_ME_SUPABASE_SERVICE_ROLE_KEY
SUPABASE_ANON_KEY=CHANGE_ME_SUPABASE_ANON_KEY

# Redis Memory Layer (REQUIRED - for AI sessions)
REDIS_URL=redis://aishacrm-redis-memory:6379

# OpenAI API (REQUIRED - for AI tool execution)
OPENAI_API_KEY=CHANGE_ME_OPENAI_API_KEY
DEFAULT_OPENAI_MODEL=gpt-4o

# CRM Backend Integration (REQUIRED)
# Internal Docker network URL
CRM_BACKEND_URL=http://aishacrm-backend:3001

# Tenant Context (REQUIRED)
DEFAULT_TENANT_ID=a11dfb63-4b18-4eb8-872e-747af2e37c46

# MCP â†’ Backend Authentication (REQUIRED)
# Must match the JWT_SECRET used by the CRM backend for internal service tokens
JWT_SECRET=CHANGE_ME_JWT_SECRET

# GitHub Adapter (OPTIONAL - enables GitHub integration)
GITHUB_TOKEN=CHANGE_ME_GITHUB_TOKEN_OR_LEAVE_EMPTY

# Supabase Direct Access (OPTIONAL - bypass backend)
# Set to 'true' only if MCP needs to query Supabase directly
USE_DIRECT_SUPABASE_ACCESS=false

# Alternative Backend URL (fallback)
# BACKEND_URL=http://aishacrm-backend:3001

# Anthropic Claude (OPTIONAL - alternative LLM)
# ANTHROPIC_API_KEY=
# ANTHROPIC_BASE_URL=https://api.anthropic.com
# ANTHROPIC_VERSION=2023-06-01

# Groq (OPTIONAL - fast inference)
# GROQ_API_KEY=
# GROQ_BASE_URL=https://api.groq.com/openai/v1

# Debug (OPTIONAL)
# DEBUG=*
# DEBUG_MCP=true
